<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity" >


    <EditText 
        android:id="@+id/edit_page_size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="输入page size"/>
    
    <EditText 
        android:id="@+id/edit_page_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_page_size"
        android:hint="输入page number"/>
    
    <ImageView 
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="#88000000"
        android:layout_below="@id/edit_page_number"/>
    
    <EditText 
        android:id="@+id/edit_file_ids"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:hint="获取状态，输入单个fildId"/> 
    
    
    <Button 
        android:id="@+id/go_video_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="走你"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_file_ids"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="说明：如果查询视频状态编辑栏有输入，将优先响应查询状态。"/>



</RelativeLayout>